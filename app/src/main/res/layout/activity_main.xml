<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.krishna.nagabhushan.expandcollapseitemdemo.MainActivity">

	<TextView
		android:id="@+id/krishna"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/krishna"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"/>

	<com.krishna.nagabhushan.widgets.ExpandCollapseItem
		android:id="@+id/item1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/krishna"
		android:layout_marginTop="10dp"/>

	<com.krishna.nagabhushan.widgets.ExpandCollapseItem
		android:id="@+id/item2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/item1"
		android:layout_marginTop="10dp"/>

	<Button
		android:id="@+id/button_submit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="5dp"
		android:text="@string/submit"/>

</RelativeLayout>
